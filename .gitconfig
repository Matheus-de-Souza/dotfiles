[user]
	name = Matheus de Souza
	email = mws.souza@gmail.com
[core]
	editor = vim
[github]
	user = Matheus-de-Souza
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
	removed = red
[alias]
	cm = commit
	st = status -sb
	br = branch
	co = checkout
	df = diff
	dt = difftool
	lg = log -p
	who = shortlog -s --
	leaderboard = "!sh -c \"git shortlog -s | sort -nr\""
[push]
	default = simple
[pull]
	ff = only
[tag]
	forceSignAnnotated = true
[gui]
	fontui = -family Arial -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Nimbus Mono PS\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	tabsize = 2
