# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize shrink height 10 px or 10 ppt
  bindsym Up resize grow height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "mouse" {
  # normal
  bindsym h exec xdotool mousemove_relative -- -30 0
  bindsym j exec xdotool mousemove_relative -- 0 30
  bindsym k exec xdotool mousemove_relative -- 0 -30
  bindsym l exec xdotool mousemove_relative -- 30 0

  bindsym Left exec xdotool mousemove_relative -- -30 0
  bindsym Down exec xdotool mousemove_relative -- 0 30
  bindsym Up exec xdotool mousemove_relative -- 0 -30
  bindsym Right exec xdotool mousemove_relative -- 30 0

  # for precision
  bindsym $mod+h exec xdotool mousemove_relative -- -5 0
  bindsym $mod+j exec xdotool mousemove_relative -- 0 5
  bindsym $mod+k exec xdotool mousemove_relative -- 0 -5
  bindsym $mod+l exec xdotool mousemove_relative -- 5 0

  bindsym $mod+Left exec xdotool mousemove_relative -- -5 0
  bindsym $mod+Down exec xdotool mousemove_relative -- 0 5
  bindsym $mod+Up exec xdotool mousemove_relative -- 0 -5
  bindsym $mod+Right exec xdotool mousemove_relative -- 5 0

  # click
  bindsym a exec xdotool click 1 # left
  bindsym s exec xdotool click 2 # middle
  bindsym d exec xdotool click 3 # right
  bindsym w exec xdotool click 5 # wheel down
  bindsym e exec xdotool click 4 # wheel up
  bindsym Shift+a exec xdotool click 1 # shift + left = mark
  bindsym Shift+w exec xdotool click 4 # control + wheel up = zoom
  bindsym Shift+e exec xdotool click 5 # control + wheel down = zoom

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+m mode "default"
}
bindsym $mod+m mode "mouse"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  output primary
  status_command i3status --config ~/.config/i3/.i3status.conf
  separator_symbol " | "
  workspace_buttons yes
  colors {
      background #222222
      statusline #dddddd
  }
}

bar {
  output HDMI1
  status_command i3status --config ~/.config/i3/.i3status.HDMI1.conf
  tray_output none
}

